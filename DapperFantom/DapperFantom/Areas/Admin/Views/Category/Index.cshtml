@model UserViewModel

<div class="container">
    <div class="col-12">
        <div class="row">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Category Name</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var category in Model.CategoryList)
                    {
                        <tr id="user@(category.CategoryId)">
                            <td>@category.CategoryId</td>
                            <td>@category.CategoryName</td>
                            <td>
                                <div class="button-group-area">
                                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@category.CategoryId" class="btn btn-info">Edit</a>
                                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@category.CategoryId" class="btn btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

                <tfoot>
                    <tr>
                        <td>
                        <td colspan="4">
                            <a asp-action="Add" asp-controller="Category" class="btn btn-success">Add Category</a>
                        </td>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>