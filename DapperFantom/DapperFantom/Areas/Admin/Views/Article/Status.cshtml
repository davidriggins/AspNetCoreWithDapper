@model List<Article>

<div class="container">
    <div class="col-12">
        <div class="row">

            <h1 class="text-primary">@ViewBag.Title</h1>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name Surname</th>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var article in Model)
                    {
                        <tr id="user@(article.ArticleId)">
                            <td>
                                <a href="~/upload/@article.Image" target="_blank">
                                    <img src="~/upload/@article.Image" height="40" />
                                </a>
                            </td>
                            <td>@article.NameSurname</td>
                            <td>@article.Title</td>
                            <td>@article.CreatedDate.ToShortDateString()</td>
                            <td>@article.Status</td>
                            <td>
                                <div class="button-group-area">
                                    <a asp-action="Edit" asp-controller="Article" asp-route-id="@article.ArticleId" class="btn btn-info">Edit</a>
                                    <a asp-action="Delete" asp-controller="Article" asp-route-id="@article.ArticleId" class="btn btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>