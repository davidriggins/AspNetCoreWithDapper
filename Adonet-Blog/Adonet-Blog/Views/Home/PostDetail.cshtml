@model BlogModel
@{
    ViewData["Title"] = "Post Detail Page";
}

<div class="contaiiner">
    <div class="card text-center mb-5 mt-3" style="width: 60%;margin:auto 20%">
        <img src="~/img/blog-1.jpg" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.post.Title</h5>
            <small>@Model.post.Publishing_Date --- @Model.post.Writer.UserName</small>
            <p class="card-text">@Model.post.Content</p>
        </div>
    </div>
</div>