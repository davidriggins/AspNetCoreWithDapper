@model BlogModel


<div class="containter">

    @if (ViewBag.error != null && ViewBag.error != "")
    {
        <div class="alert alert-danger">
            <div>@ViewBag.error</div>
        </div>
    }

    <div class="row">
        <div class="col-12">
            Are you sure you want to delete this post: @Model.post.Title ?
            <br />

            <h2>Delete with get method</h2>
            <a asp-controller="User" asp-action="DeleteIt" asp-route-id="@Model.post.PostId" class="btn btn-danger">Yes</a>
            <a asp-controller="User" asp-action="Index" class="btn btn-info">No</a>
            <hr />

            <h2>Delete with post method</h2>
            <form asp-controller="User" asp-action="Delete" method="post">
                <input type="hidden" asp-for="@Model.post.PostId" />
                <input type="submit" value="Yes" class="btn btn-danger" />
                <a asp-controller="User" asp-action="Index" class="btn btn-info">No</a>
            </form>
        </div>
    </div>

</div>