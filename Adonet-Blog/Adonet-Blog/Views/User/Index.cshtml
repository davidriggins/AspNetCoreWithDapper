@model BlogModel

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Writer</td>
                <td>To Do List</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var post in Model.postList)
            {
                <tr>
                    <td>@post.PostId</td>
                    <td>@post.Title</td>
                    <td>@post.Writer.UserName</td>
                    <td>
                        <a class="btn btn-info" asp-controller="User" asp-action="Update" asp-route-id="@post.PostId">Edit</a>
                        <a class="btn btn-danger" asp-controller="User" asp-action="Delete" asp-route-id="@post.PostId">Delete</a>
                    </td>
                    
                </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <th colspan="4">
                    <a class="btn btn-info" asp-controller="User" asp-action="Create">Create</a>
                </th>
            </tr>
        </tfoot>

    </table>

</div>